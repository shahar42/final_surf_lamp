# Surf Lamp AI Insights Configuration
# Copy this to .env and customize for your setup

# LLM Configuration (required for insights)
GEMINI_API_KEY=your-gemini-api-key-here
INSIGHTS_MODEL=gemini-2.0-flash-exp   # Gemini 2.5 Flash model
INSIGHTS_LLM_PROVIDER=gemini          # 'gemini' or 'openai'
INSIGHTS_ENABLED=true

# Analysis Configuration
INSIGHTS_LOOKBACK_HOURS=24             # How many hours of data to analyze
INSIGHTS_DEPTH=standard                # basic, standard, deep
INSIGHTS_ANALYSIS_ONLY=true            # CRITICAL: AI is READ-ONLY analyst, never suggests code

# Output Configuration
INSIGHTS_SAVE_FILE=true                # Save detailed reports to files
INSIGHTS_OUTPUT_FORMAT=txt             # 'txt' or 'md'
INSIGHTS_OUTPUT_DIR=./insights         # Directory to save reports (will be created)
INSIGHTS_EMAIL=true                    # Send insights via email

# Email Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com       # Gmail SMTP server
EMAIL_SMTP_PORT=587                    # TLS port
EMAIL_FROM=shaharisn1@gmail.com        # Your Gmail address
EMAIL_PASSWORD=your-app-password-here  # Gmail app password (not regular password)
EMAIL_TO=shaharisn1@gmail.com          # Recipient email

# Scheduling (for cron/systemd)
INSIGHTS_SCHEDULE=every_2h             # every_2h, daily, weekly
INSIGHTS_TIME=08:00                    # What time to run daily insights
INSIGHTS_DAILY_TIME=08:00              # Time for daily summary
INSIGHTS_IMMEDIATE_ALERTS=true         # Send immediate alerts for critical issues

# Alert Thresholds
ALERT_ERROR_THRESHOLD=5                # Trigger immediate alert if errors exceed this
ALERT_RESPONSE_TIME_MS=2000            # Alert if response time exceeds this
ALERT_DOWNTIME_MINUTES=5               # Alert if service down for this long

# Optional: Integration with monitoring
INSIGHTS_INCLUDE_HEALTH_DATA=true      # Include health monitoring data
INSIGHTS_ALERT_INTEGRATION=true        # Include in alert pipeline