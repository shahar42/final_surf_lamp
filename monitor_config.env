# Surf Lamp Monitor Configuration
# Copy this to .env and customize for your setup

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_DISCORD_ENABLED=false

# Email Settings (if ALERT_EMAIL_ENABLED=true)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
ALERT_EMAIL_USER=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@yoursite.com,alerts@yoursite.com

# Discord Settings (if ALERT_DISCORD_ENABLED=true)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Monitoring Thresholds
ERROR_THRESHOLD=3              # Max errors per hour before alerting
PROCESSING_TIMEOUT=90          # Max processing time in minutes

# Health Check Intervals (for systemd timer)
MONITOR_INTERVAL=3600          # Check every hour (3600 seconds)